{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext", 
    "baseUrl": ".",
    "paths": {
      "*":["./src/*"]
    },
    // "module": "es6",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    // import без * as
    "allowSyntheticDefaultImports": true,
    // import вместо require
    "esModuleInterop": true,
  }
  ,
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  // "include": [
  //   "src"
  // ]
}